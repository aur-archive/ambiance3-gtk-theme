pkgname=ambiance3-gtk-theme
_pkgname=ambiance
pkgver=3.0
pkgrel=1
pkgdesc="A gtk theme based on Ubuntu Ambience"
arch=('i686' 'x86_64')
url="http://gnome-look.org/content/show.php/Ambiance+3+?content=128841"
license=('GPL')
depends=('bash')
source=("http://dl.dropbox.com/u/5922731/$_pkgname-$pkgver.tar.gz")
md5sums=('6662f979ca38fb4d8f9e0b8fe7cdc6ac')

build() {
	mkdir -p $pkgdir/usr/share/themes/Ambiance3
	cd $srcdir/$_pkgname-$pkgver
	cp -R * $pkgdir/usr/share/themes/Ambiance3/
	  	

  
}


